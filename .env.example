# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=YOUR_TOKEN_FROM_BOT_FATHER

# Admin User IDs (comma-separated list of Telegram user IDs)
# To get your user ID, start the bot and use /start or /help commands
# These users will have access to /metrics and /health commands
# Example: ADMIN_USER_IDS=123456789,987654321
# Leave empty to allow all users access to admin commands
ADMIN_USER_IDS=

# Optional: Custom download directory (defaults to ./temp)
# DOWNLOAD_DIR=/path/to/download/directory

# Enable Metrics System (recommended for production)
ENABLE_METRICS=true

# Rate Limiting Configuration
# Set to false to completely disable rate limiting
ENABLE_RATE_LIMITING=true

# Rate Limits - Private Chats
RATE_LIMIT_PRIVATE_PER_MINUTE=10
RATE_LIMIT_PRIVATE_PER_HOUR=100
RATE_LIMIT_PRIVATE_BURST=3

# Rate Limits - Groups
RATE_LIMIT_GROUP_PER_MINUTE=20
RATE_LIMIT_GROUP_PER_HOUR=200
RATE_LIMIT_GROUP_BURST=5

# Rate Limits - Supergroups
RATE_LIMIT_SUPERGROUP_PER_MINUTE=15
RATE_LIMIT_SUPERGROUP_PER_HOUR=150
RATE_LIMIT_SUPERGROUP_BURST=4

# Rate Limits - Global (across all users)
RATE_LIMIT_GLOBAL_PER_MINUTE=100
RATE_LIMIT_GLOBAL_PER_HOUR=2000

# Node Environment
NODE_ENV=production
